@page "/songs/create"

@using Museek.Domain
@using Microsoft.EntityFrameworkCore
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager

@attribute [Authorize(Roles = "Administrator, User")]

<PageTitle>Create Song</PageTitle>

<h1>Create</h1>
<h2>Song</h2>
<hr />

<div class="row">
    <div class="col-md-6">

        <EditForm method="post" Model="Song" OnValidSubmit="AddSong" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <!-- Song Title -->
            <div class="mb-3">
                <label class="form-label">Song Title:</label>
                <InputText @bind-Value="Song.Title" class="form-control" />
                <ValidationMessage For="() => Song.Title" class="text-danger" />
            </div>

            <!-- Artist -->
            <div class="mb-3">
                <label class="form-label">Artist:</label>
                <InputSelect @bind-Value="Song.ArtistId" class="form-control">
                    <option value="">Select Artist</option>
                    @foreach (var a in artists)
                    {
                        <option value="@a.Id">@a.Name</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Song.ArtistId" class="text-danger" />
            </div>

            <!-- Album -->
            <div class="mb-3">
                <label class="form-label">Album:</label>
                <InputSelect @bind-Value="Song.AlbumId" class="form-control">
                    <option value="">Select Album</option>
                    @foreach (var al in albums)
                    {
                        <option value="@al.Id">@al.Title</option>
                    }
                </InputSelect>
                <ValidationMessage For="() => Song.AlbumId" class="text-danger" />
            </div>

            <!-- Cover Image -->
            <div class="mb-3">
                <label class="form-label">Cover Image:</label>
                <InputFile OnChange="OnCoverSelected" />
            </div>

            <!-- Audio File -->
            <div class="mb-3">
                <label class="form-label">Audio File:</label>
                <InputFile OnChange="OnAudioSelected" />
            </div>

            <button type="submit" class="btn btn-primary">Create</button>

        </EditForm>

        <div class="mt-3">
            <a href="/songs">Back to List</a>
        </div>

    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private Song Song { get; set; } = new();

    private List<Artist> artists = new();
    private List<Album> albums = new();

    private IBrowserFile? coverFile;
    private IBrowserFile? audioFile;

    protected override Task OnInitializedAsync()
    {
        // Hardcoded temporary data so dropdown works
        artists = new()
        {
            new Artist { Id = 1, Name = "The 1975" },
            new Artist { Id = 2, Name = "Ariana Grande" },
            new Artist { Id = 3, Name = "Billie Eilish" }
        };

        albums = new()
        {
            new Album { Id = 1, Title = "Being Funny In A Foreign Language" },
            new Album { Id = 2, Title = "Sweetener" },
            new Album { Id = 3, Title = "Happier Than Ever" }
        };

        return Task.CompletedTask;
    }

    private void OnCoverSelected(InputFileChangeEventArgs e)
    {
        coverFile = e.File;
        Song.Cover_Art = $"images/{coverFile.Name}";
    }

    private void OnAudioSelected(InputFileChangeEventArgs e)
    {
        audioFile = e.File;
        Song.Audio_File = $"audios/{audioFile.Name}";
    }

    private async Task AddSong()
    {
        Song.DateCreated = DateTime.UtcNow;
        Song.DateUpdated = DateTime.UtcNow;

        using var context = DbFactory.CreateDbContext();
        context.Song.Add(Song);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/songs");
    }
}
