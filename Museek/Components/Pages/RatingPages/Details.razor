@page "/ratings/details"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Rating</h2>
    <hr />
    @if (rating is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Comment</dt>
            <dd class="col-sm-10">@rating.Comment</dd>
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@rating.UserId</dd>
            <dt class="col-sm-2">SongId</dt>
            <dd class="col-sm-10">@rating.SongId</dd>
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@rating.DateCreated</dd>
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@rating.DateUpdated</dd>
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@rating.CreatedBy</dd>
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@rating.UpdatedBy</dd>
        </dl>
        <div>
            <a href="@($"/ratings/edit?id={rating.Id}")">Edit</a> |
            <a href="@($"/ratings")">Back to List</a>
        </div>
    }
</div>

@code {
    private Rating? rating;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        rating = await context.Rating.FirstOrDefaultAsync(m => m.Id == Id);

        if (rating is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
