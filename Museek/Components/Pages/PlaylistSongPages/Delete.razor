@page "/playlistsongs/delete"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>PlaylistSong</h2>
    <hr />
    @if (playlistsong is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">SongId</dt>
            <dd class="col-sm-10">@playlistsong.SongId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">PlaylistId</dt>
            <dd class="col-sm-10">@playlistsong.PlaylistId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@playlistsong.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@playlistsong.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@playlistsong.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@playlistsong.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="playlistsong" OnValidSubmit="DeletePlaylistSong" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(playlistsong is null)">Delete</button> |
            <a href="/playlistsongs">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private PlaylistSong? playlistsong;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        playlistsong = await context.PlaylistSong.FirstOrDefaultAsync(m => m.Id == Id);

        if (playlistsong is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePlaylistSong()
    {
        using var context = DbFactory.CreateDbContext();
        context.PlaylistSong.Remove(playlistsong!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/playlistsongs");
    }
}
