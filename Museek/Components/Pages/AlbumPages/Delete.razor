@page "/albums/delete"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Album</h2>
    <hr />
    @if (album is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@album.Title</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Released_Year</dt>
            <dd class="col-sm-10">@album.Released_Year</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Cover_Image</dt>
            <dd class="col-sm-10">@album.Cover_Image</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ArtistId</dt>
            <dd class="col-sm-10">@album.ArtistId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@album.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@album.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@album.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@album.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="album" OnValidSubmit="DeleteAlbum" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(album is null)">Delete</button> |
            <a href="/albums">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Album? album;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        album = await context.Album.FirstOrDefaultAsync(m => m.Id == Id);

        if (album is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteAlbum()
    {
        using var context = DbFactory.CreateDbContext();
        context.Album.Remove(album!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/albums");
    }
}
