@page "/albums/create"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Album</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Album" OnValidSubmit="AddAlbum" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label> 
                <InputText id="title" @bind-Value="Album.Title" class="form-control" /> 
                <ValidationMessage For="() => Album.Title" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="released_year" class="form-label">Released_Year:</label> 
                <InputText id="released_year" @bind-Value="Album.Released_Year" class="form-control" /> 
                <ValidationMessage For="() => Album.Released_Year" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="cover_image" class="form-label">Cover_Image:</label> 
                <InputText id="cover_image" @bind-Value="Album.Cover_Image" class="form-control" /> 
                <ValidationMessage For="() => Album.Cover_Image" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="artistid" class="form-label">ArtistId:</label> 
                <InputNumber id="artistid" @bind-Value="Album.ArtistId" class="form-control" /> 
                <ValidationMessage For="() => Album.ArtistId" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="datecreated" class="form-label">DateCreated:</label> 
                <InputDate id="datecreated" @bind-Value="Album.DateCreated" class="form-control" /> 
                <ValidationMessage For="() => Album.DateCreated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="dateupdated" class="form-label">DateUpdated:</label> 
                <InputDate id="dateupdated" @bind-Value="Album.DateUpdated" class="form-control" /> 
                <ValidationMessage For="() => Album.DateUpdated" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdby" class="form-label">CreatedBy:</label> 
                <InputText id="createdby" @bind-Value="Album.CreatedBy" class="form-control" /> 
                <ValidationMessage For="() => Album.CreatedBy" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedby" class="form-label">UpdatedBy:</label> 
                <InputText id="updatedby" @bind-Value="Album.UpdatedBy" class="form-control" /> 
                <ValidationMessage For="() => Album.UpdatedBy" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/albums">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Album Album { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddAlbum()
    {
        using var context = DbFactory.CreateDbContext();
        context.Album.Add(Album);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/albums");
    }
}
