@page "/artistsongs/delete"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>ArtistSong</h2>
    <hr />
    @if (artistsong is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ArtistId</dt>
            <dd class="col-sm-10">@artistsong.ArtistId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SongId</dt>
            <dd class="col-sm-10">@artistsong.SongId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@artistsong.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@artistsong.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@artistsong.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@artistsong.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="artistsong" OnValidSubmit="DeleteArtistSong" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(artistsong is null)">Delete</button> |
            <a href="/artistsongs">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private ArtistSong? artistsong;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        artistsong = await context.ArtistSong.FirstOrDefaultAsync(m => m.Id == Id);

        if (artistsong is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteArtistSong()
    {
        using var context = DbFactory.CreateDbContext();
        context.ArtistSong.Remove(artistsong!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/artistsongs");
    }
}
