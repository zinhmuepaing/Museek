@page "/usersongs/details"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@using Museek.Data
@inject IDbContextFactory<MuseekContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Saved Song Details</PageTitle>

<h1>Saved Song Details</h1>
<hr />

@if (userSong is null || song is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">

            <div class="song-edit-card">
                <img src="@song.Cover_Art" class="song-img" />
                <div class="song-meta">
                    <h3>@song.Title</h3>
                    <p>@artistName</p>
                    <p><small>@albumTitle</small></p>
                </div>
            </div>

            <dl class="row mt-3">
                <dt class="col-sm-3">Title</dt>
                <dd class="col-sm-9">@song.Title</dd>

                <dt class="col-sm-3">Artist</dt>
                <dd class="col-sm-9">@artistName</dd>

                <dt class="col-sm-3">Album</dt>
                <dd class="col-sm-9">@albumTitle</dd>

                <dt class="col-sm-3">Duration</dt>
                <dd class="col-sm-9">@song.Duration</dd>

                <dt class="col-sm-3">Audio File</dt>
                <dd class="col-sm-9">@song.Audio_File</dd>

                <dt class="col-sm-3">Date Saved</dt>
                <dd class="col-sm-9">@userSong.DateCreated</dd>
            </dl>

            <div class="mt-3">
                <a href="@($"/usersongs/edit?id={userSong.Id}")">Edit</a> |
                <a href="/usersongs">Back to List</a>
            </div>
        </div>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private MuseekContext context = default!;
    private string currentUserId = string.Empty;

    private UserSong? userSong;
    private Song? song;
    private string artistName = "Unknown";
    private string albumTitle = "Unknown";

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        currentUserId =
            user.FindFirst("userId")?.Value
            ?? user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
            ?? string.Empty;

        if (string.IsNullOrWhiteSpace(currentUserId))
        {
            NavigationManager.NavigateTo("Account/Login");
            return;
        }

        userSong = await context.UserSong.FirstOrDefaultAsync(
            us => us.Id == Id && us.UserId == currentUserId);

        if (userSong == null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        song = await context.Song.FirstOrDefaultAsync(s => s.Id == userSong.SongId);

        if (song != null)
        {
            var artist = await context.Artist.FirstOrDefaultAsync(a => a.Id == song.ArtistId);
            artistName = artist?.Name ?? "Unknown";

            var album = await context.Album.FirstOrDefaultAsync(al => al.Id == song.AlbumId);
            albumTitle = album?.Title ?? "Unknown";
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (context != null)
        {
            await context.DisposeAsync();
        }
    }
}
