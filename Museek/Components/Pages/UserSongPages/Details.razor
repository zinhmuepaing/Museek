@page "/usersongs/details"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@using Museek.Data
@inject IDbContextFactory<MuseekContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Saved Song Details</PageTitle>

<div class="details-wrapper">

    <h1 class="page-title">Saved Song Details</h1>
    <hr class="divider" />

    @if (userSong is null || song is null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="details-card">

            <img src="@song.Cover_Art" class="song-img" />

            <h2 class="song-title">@song.Title</h2>
            <p class="meta-text">@artistName</p>
            <p class="meta-text">@albumTitle</p>

            <div class="info-grid">
                <div class="info-row">
                    <span class="label">Duration:</span>
                    <span>@song.Duration</span>
                </div>

                <div class="info-row">
                    <span class="label">Audio File:</span>
                    <span>@song.Audio_File</span>
                </div>

                <div class="info-row">
                    <span class="label">Date Saved:</span>
                    <span>@userSong.DateCreated</span>
                </div>
            </div>

            <div class="actions">
                <a href="@($"/usersongs/edit?id={userSong.Id}")" class="action-link">Edit</a>
                <span class="divider-dot">•</span>
                <a href="/usersongs" class="action-link">Back to List</a>
            </div>

        </div>
    }

</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private MuseekContext context = default!;
    private string currentUserId = string.Empty;

    private UserSong? userSong;
    private Song? song;
    private string artistName = "Unknown";
    private string albumTitle = "Unknown";

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        currentUserId =
            user.FindFirst("userId")?.Value
            ?? user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
            ?? string.Empty;

        if (string.IsNullOrWhiteSpace(currentUserId))
        {
            NavigationManager.NavigateTo("Account/Login");
            return;
        }

        userSong = await context.UserSong.FirstOrDefaultAsync(
            us => us.Id == Id && us.UserId == currentUserId);

        if (userSong == null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        song = await context.Song.FirstOrDefaultAsync(s => s.Id == userSong.SongId);

        if (song != null)
        {
            var artist = await context.Artist.FirstOrDefaultAsync(a => a.Id == song.ArtistId);
            artistName = artist?.Name ?? "Unknown";

            var album = await context.Album.FirstOrDefaultAsync(al => al.Id == song.AlbumId);
            albumTitle = album?.Title ?? "Unknown";
        }
    }

    public async ValueTask DisposeAsync()
    {
        if (context != null)
            await context.DisposeAsync();
    }
}

