@page "/usersongs/edit"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@using Museek.Data
@inject IDbContextFactory<MuseekContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Edit Saved Song</PageTitle>

<h1>Edit Saved Song</h1>
<hr />

@if (userSong is null || song is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">

            <div class="song-edit-card">
                <img src="@song.Cover_Art" class="song-img" />

                <div class="song-meta">
                    <h3>@song.Title</h3>
                    <p>@artistName</p>
                    <p><small>Saved on @userSong.DateCreated.ToShortDateString()</small></p>
                </div>
            </div>

            <div class="mt-3">
                <button class="btn btn-primary me-2" @onclick="GoToCreate">Add Another</button>
                <button class="btn btn-danger" @onclick="GoToDelete">Delete</button>
            </div>
        </div>
    </div>
}

<div class="mt-3">
    <a href="/usersongs">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private MuseekContext context = default!;
    private string currentUserId = string.Empty;

    private UserSong? userSong;
    private Song? song;
    private string artistName = "Unknown";

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        currentUserId =
            user.FindFirst("userId")?.Value
            ?? user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
            ?? string.Empty;

        if (string.IsNullOrWhiteSpace(currentUserId))
        {
            NavigationManager.NavigateTo("Account/Login");
            return;
        }

        userSong = await context.UserSong.FirstOrDefaultAsync(
            us => us.Id == Id && us.UserId == currentUserId);

        if (userSong == null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        song = await context.Song.FirstOrDefaultAsync(s => s.Id == userSong.SongId);

        if (song != null)
        {
            var artist = await context.Artist.FirstOrDefaultAsync(a => a.Id == song.ArtistId);
            artistName = artist?.Name ?? "Unknown";
        }
    }

    private void GoToCreate()
    {
        NavigationManager.NavigateTo("/usersongs/create");
    }

    private void GoToDelete()
    {
        NavigationManager.NavigateTo($"/usersongs/delete?id={Id}");
    }

    public async ValueTask DisposeAsync()
    {
        if (context != null)
        {
            await context.DisposeAsync();
        }
    }
}
