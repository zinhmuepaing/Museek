@page "/usersongs/delete"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@using Museek.Data
@inject IDbContextFactory<MuseekContext> DbFactory
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@attribute [Authorize]

<PageTitle>Delete Saved Song</PageTitle>

<h1>Delete Saved Song</h1>
<hr />

@if (userSong is null || song is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-6">
            <div class="song-edit-card">
                <img src="@song.Cover_Art" class="song-img" />
                <div class="song-meta">
                    <h3>@song.Title</h3>
                    <p>@artistName</p>
                    <p><small>Saved on @userSong.DateCreated.ToShortDateString()</small></p>
                </div>
            </div>

            <p class="mt-3">Are you sure you want to remove this song from your library</p>

            <EditForm method="post" Model="userSong" OnValidSubmit="DeleteUserSong" FormName="delete" Enhance>
                <button type="submit" class="btn btn-danger me-2">Confirm Delete</button>
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
            </EditForm>
        </div>
    </div>
}

<div class="mt-3">
    <a href="/usersongs">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    private MuseekContext context = default!;
    private string currentUserId = string.Empty;

    private UserSong? userSong;
    private Song? song;
    private string artistName = "Unknown";

    protected override async Task OnInitializedAsync()
    {
        context = DbFactory.CreateDbContext();

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        currentUserId =
            user.FindFirst("userId")?.Value
            ?? user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value
            ?? string.Empty;

        if (string.IsNullOrWhiteSpace(currentUserId))
        {
            NavigationManager.NavigateTo("Account/Login");
            return;
        }

        userSong = await context.UserSong.FirstOrDefaultAsync(
            us => us.Id == Id && us.UserId == currentUserId);

        if (userSong == null)
        {
            NavigationManager.NavigateTo("notfound");
            return;
        }

        song = await context.Song.FirstOrDefaultAsync(s => s.Id == userSong.SongId);

        if (song != null)
        {
            var artist = await context.Artist.FirstOrDefaultAsync(a => a.Id == song.ArtistId);
            artistName = artist?.Name ?? "Unknown";
        }
    }

    private async Task DeleteUserSong()
    {
        if (userSong == null)
        {
            return;
        }

        context.UserSong.Remove(userSong);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/usersongs");
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/usersongs");
    }

    public async ValueTask DisposeAsync()
    {
        if (context != null)
        {
            await context.DisposeAsync();
        }
    }
}
