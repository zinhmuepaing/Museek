@page "/usersongs/delete"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>UserSong</h2>
    <hr />
    @if (usersong is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@usersong.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">SongId</dt>
            <dd class="col-sm-10">@usersong.SongId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@usersong.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@usersong.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@usersong.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@usersong.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="usersong" OnValidSubmit="DeleteUserSong" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(usersong is null)">Delete</button> |
            <a href="/usersongs">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private UserSong? usersong;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        usersong = await context.UserSong.FirstOrDefaultAsync(m => m.Id == Id);

        if (usersong is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteUserSong()
    {
        using var context = DbFactory.CreateDbContext();
        context.UserSong.Remove(usersong!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/usersongs");
    }
}
