@page "/playlists/delete"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Playlist</h2>
    <hr />
    @if (playlist is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@playlist.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@playlist.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">AdminId</dt>
            <dd class="col-sm-10">@playlist.AdminId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UserId</dt>
            <dd class="col-sm-10">@playlist.UserId</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateCreated</dt>
            <dd class="col-sm-10">@playlist.DateCreated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DateUpdated</dt>
            <dd class="col-sm-10">@playlist.DateUpdated</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedBy</dt>
            <dd class="col-sm-10">@playlist.CreatedBy</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">UpdatedBy</dt>
            <dd class="col-sm-10">@playlist.UpdatedBy</dd>
        </dl>
        <EditForm method="post" Model="playlist" OnValidSubmit="DeletePlaylist" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(playlist is null)">Delete</button> |
            <a href="/playlists">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Playlist? playlist;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        playlist = await context.Playlist.FirstOrDefaultAsync(m => m.Id == Id);

        if (playlist is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeletePlaylist()
    {
        using var context = DbFactory.CreateDbContext();
        context.Playlist.Remove(playlist!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/playlists");
    }
}
