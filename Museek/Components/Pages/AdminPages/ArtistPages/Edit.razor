@page "/artists/edit"
@using Microsoft.EntityFrameworkCore
@using Museek.Domain
@inject IDbContextFactory<Museek.Data.MuseekContext> DbFactory
@inject NavigationManager NavigationManager
@inject IWebHostEnvironment Env

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>
<h2>Artist</h2>
<hr />

@if (Artist is null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm method="post" Model="Artist" OnValidSubmit="UpdateArtist" FormName="edit" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary />

                <input type="hidden" name="Artist.Id" value="@Artist.Id" />

                <div class="mb-3">
                    <label class="form-label">Name:</label>
                    <InputText @bind-Value="Artist.Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Bio:</label>
                    <InputText @bind-Value="Artist.Bio" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Country:</label>
                    <InputText @bind-Value="Artist.Country" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Profile Picture:</label>
                    <InputSelect @bind-Value="Artist.Profile_Pic" class="form-control">
                        <option value="">-- Select Image --</option>
                        @foreach (var img in ImageFiles)
                        {
                            <option value="@($"Artist Profile Images/{img}")">@img</option>
                        }
                    </InputSelect>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </EditForm>
        </div>

        <div class="col-md-8">
            <div class="d-flex justify-content-center align-items-start">
                @if (!string.IsNullOrWhiteSpace(Artist.Profile_Pic))
                {
                    <img src="@("/" + Artist.Profile_Pic)" alt="Artist Profile" class="img-fluid" style="max-height: 420px; width: auto; border-radius: 12px;" />
                }
                else
                {
                    <div class="text-muted">No image selected</div>
                }
            </div>
        </div>
    </div>
}

<div>
    <a href="/artists">Back to List</a>
</div>

@code {
    [SupplyParameterFromQuery]
    private int Id { get; set; }

    [SupplyParameterFromForm]
    private Artist? Artist { get; set; }

    private List<string> ImageFiles = new();

    protected override async Task OnInitializedAsync()
    {
        LoadImages();
        using var context = DbFactory.CreateDbContext();
        Artist ??= await context.Artist.FirstOrDefaultAsync(a => a.Id == Id);

        if (Artist is null)
            NavigationManager.NavigateTo("notfound");
    }

    private void LoadImages()
    {
        var dir = Path.Combine(Env.WebRootPath, "Artist Profile Images");
        if (Directory.Exists(dir))
            ImageFiles = Directory.GetFiles(dir).Select(Path.GetFileName).ToList();
    }

    private async Task UpdateArtist()
    {
        using var context = DbFactory.CreateDbContext();
        context.Attach(Artist!).State = EntityState.Modified;
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/artists");
    }
}
